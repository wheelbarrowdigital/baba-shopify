{% style %}
  section.relume-cover-049 {
    > .container {
      align-items: flex-start;
      display: grid;
      gap: var(--spacing-5);
      grid-template-columns: 1fr;

      @media (min-width: 1024px) {
        gap: var(--spacing-13);
        grid-template-columns: 1fr 1fr;
      }
    }
  }
{% endstyle %}

<div class="container container-lg {% unless request.design_mode %}reveal-from-bottom{% endunless %}">
  <div class="alpha">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'heading' %}
          <h2 class="display-5xl">
            {{ block.settings.content }}
          </h2>
      {% endcase %}
    {% endfor %}
  </div>

  <div class="bravo">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'paragraph' %}
          <p class="text-lg">
            {{ block.settings.content }}
          </p>
      {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Cover 049",
  "tag": "section",
  "class": "relume-cover-049 color-scheme-light amber",
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "content",
          "label": "Heading text",
          "default": "Lorem ipsum dolor sit amet"
        }
      ]
    },
    {
      "type": "paragraph",
      "name": "Paragraph",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "content",
          "label": "Content",
          "default": "Lorem ipsum dolor sit amet consectetur. Mauris sem dictum blandit aliquam risus amet. Vitae ipsum consectetur vulputate sed ac pellentesque suspendisse sit pulvinar. Orci facilisis sed leo commodo volutpat in. Convallis tempor condimentum tellus ultrices in diam velit pretium."
        }
      ]
    }
  ]
}
{% endschema %}
