{% style %}
  section.relume-cta-020 {
  }
{% endstyle %}

<div class="container container-lg">
  <h2>Join the Coffee Revolution</h2>
  <p>Discover the joy of exceptional coffee delivered right to your inbox. Join us today!</p>
  {%- form 'customer', customer -%}
    {% if form.posted_successfully? %}
      <p class="form-success">Thanks for subscribing!</p>
    {% endif %}

    <input type="hidden" name="contact[tags]" value="newsletter">
    <input
      type="email"
      name="contact[email]"
      id="Email"
      placeholder="Your Email Here"
      required
    >
    <button type="submit">Sign Up</button>
  {%- endform -%}
</div>

{% schema %}
{
  "name": "CTA 20",
  "tag": "section",
  "class": "relume-cta-020",
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1
    },
    {
      "type": "paragraph",
      "name": "Paragraph",
      "limit": 1
    },
    {
      "type": "button",
      "name": "Button",
      "limit": 2,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        }
      ]
    },
    {
      "type": "newsletter_signup",
      "name": "Newsletter Signup",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "placeholder",
          "label": "Placeholder"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        }
      ]
    }
  ]
}
{% endschema %}
