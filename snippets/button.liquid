{% comment %}
  Renders a button component

  Accepts:
  - text: {String} Text to display on button (required)
  - style: {String} Style of button: 'fill' (default), 'outline', 'link'
  - color: {String} Color scheme: 'primary' (default), 'secondary', 'light', 'dark', 'success', 'error'
  - url: {String} URL to link to (optional)
  - type: {String} Button type attribute (default: 'button')
  - class: {String} Additional classes (optional)
  - disabled: {Boolean} Disable the button (optional)
  - name: {String} name attribute (optional)
  - id: {String} id attribute (optional)
  - aria_label: {String} aria-label attribute (optional)
  - data_attributes: {Object} Additional data attributes (optional)

  Usage:
  {% render 'button',
    text: 'Click me',
    style: 'fill',
    color: 'primary',
    url: product.url,
    class: 'my-custom-class',
    disabled: false
  %}
{% endcomment %}

{% style %}
  .button {
    align-items: center;
    border: 2px solid transparent;
    border-radius: var(--button-border-radius);
    cursor: pointer;
    display: inline-flex;
    flex: 1 0 fit-content;
    justify-content: center;
    min-width: min-content;
    padding: 0.75rem 1.6875rem;
    text-decoration: none;
    transition: all 0.2s ease-in-out;

    @media (min-width: 576px) {
      flex-grow: 0;
    }

    &.disabled,
    &:disabled {
      background-color: var(--color-gray-500);
      opacity: 0.5;
      cursor: not-allowed;
    }

    &.fill {
      &.primary {
        background-color: var(--button-color-primary);
        color: var(--contrast-fg);

        &:hover:not(:disabled) {
          background-color: var(--button-color-primary-hover);
        }
      }
    }

    &.outline {
      background-color: transparent;

      &.primary {
        border-color: var(--button-color-primary);
        color: var(--button-color-primary);

        &:hover:not(:disabled) {
          background-color: var(--button-color-primary-hover);
          border-color: var(--button-color-primary-hover);
          color: var(--contrast-fg);
        }
      }
    }

    &.link {
      padding: 0;
      border: none;
      background: none;

      &:hover:not(:disabled) {
        color: var(--gray-900);
      }

      &.primary {
        color: var(--button-color-primary);

        &:hover:not(:disabled) {
          color: var(--button-color-primary-hover);
          text-decoration: underline;
        }
      }
    }
  }
{% endstyle %}

{%- liquid
  assign button_style = style | default: 'fill'
  assign button_color = color | default: ''
  assign button_type = type | default: 'button'
  assign button_class = class | default: ''

  if button_color == ''
    if button_style == 'fill' or button_style == 'outline'
      assign button_color = 'primary'
    endif
  endif

  assign full_class = 'button text-md bold' | append: ' ' | append: button_style | append: ' ' | append: button_color
  if button_class != ''
    assign full_class = full_class | append: ' ' | append: button_class
  endif
  if disabled
    assign full_class = full_class | append: ' button--disabled'
  endif
-%}

{%- if url != blank and disabled != true -%}
  <a
    href="{{ url }}"
    class="{{ full_class }}"
    {% if id %}
      id="{{ id }}"
    {% endif %}
    {% if aria_label %}
      aria-label="{{ aria_label }}"
    {% endif %}
    {% if data_attributes %}
      {% for attr in data_attributes %}
        data-{{ attr[0] }}="{{ attr[1] }}"
      {% endfor %}
    {% endif %}
  >
    {{ text }}
  </a>
{%- else -%}
  <button
    type="{{ button_type }}"
    class="{{ full_class }}"
    {% if disabled %}
      disabled
    {% endif %}
    {% if name %}
      name="{{ name }}"
    {% endif %}
    {% if id %}
      id="{{ id }}"
    {% endif %}
    {% if aria_label %}
      aria-label="{{ aria_label }}"
    {% endif %}
    {% if data_attributes %}
      {% for attr in data_attributes %}
        data-{{ attr[0] }}="{{ attr[1] }}"
      {% endfor %}
    {% endif %}
  >
    {{ text }}
  </button>
{%- endif -%}
